<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 my-3 rounded border">
            <div class="form-group text-small my-3">
                <small><a href="/">Quay lại</a></small>
            </div>
            <h4 class="text-success">Thêm sản phẩm mới</h4>
            <form action="/add" method="post" enctype="multipart/form-data">
                <div class="form-group my-3">
                    <label class="form-label" for="name">Tên sản phẩm</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Nhập tên sản phẩm" value="{{name}}">
                </div>

                <div class="form-group my-3">
                    <label class="form-label" for="price">Giá sản phẩm</label>
                    <input type="text" name="price" id="price" class="form-control" placeholder="Nhập giá bán" value="{{price}}">
                </div>

                <div class="form-group my-3">
                    <label class="form-label" for="image">Ảnh sản phẩm</label>
                    <div class="custom-file">
                        <input accept="image/*" type="file" name="image" id="customFile" class="custom-file-input">
                    </div>
                </div>

                <div class="form-group my-3">
                    <label for="desc" class="form-label">Mô tả</label>
                    <textarea name="desc" id="desc" rows="4" class="form-control">{{desc}}</textarea>
                </div>

                {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                </div>
                {{/if}}

                <div class="form-group my-3">
                    <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('.custom-file-input').on('change', function () {
        var fileName = $(this).val().split('\\').pop()
        $(this).siblings('.custom-file-label').addClass('selected').html()
    })
</script>